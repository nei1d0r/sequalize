<section id="gigs" class="container">
    <h1>All Gigs</h1>

    {{!-- loop through each gig (passed in as 'gigs') --}}
    {{#each gigs}}
      <div class="gig">
          {{!-- destructured title --}}
      <h3>{{title}}</h3>
      {{!-- destructured description --}}
      <p>{{description}}</p>
      <ul>
          {{!-- destructured budget --}}
        <li>Budget: {{budget}}</li>
        {{!-- destructured email added to mailto --}}
        <li><a href="mailto:{{contact_email}}" class="btn btn-reverse">Apply Now</a></li>
      </ul>
      <div class="tech">
          {{!-- destructured technology --}}
        <small>Technologies Needed: <span>{{technologies}}</span></small>
      </div>
    </div>
    {{!-- no gigs available else clause --}}
    {{else}}
      <p>No gigs available</p>
    {{/each}}
    
  </section>